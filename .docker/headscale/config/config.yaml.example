# Headscale Config - v0.27.x uyumlu

# BU KISMI SUNUCUNUZUN PUBLIC IP ADRESİ VEYA DOMAINI İLE DEĞİŞTİRİN
# Örnek: http://192.168.1.100:8080 veya https://headscale.example.com
server_url: https://headscale.aqtivite.com.tr

# Dinleme adresleri (Docker içinde 0.0.0.0 olmalı)
listen_addr: 0.0.0.0:8080
metrics_listen_addr: 0.0.0.0:9090
grpc_listen_addr: 0.0.0.0:50443

# IP Prefix'leri (Tailscale varsayılanları)
prefixes:
  v6: fd7a:115c:a1e0::/48
  v4: 100.64.0.0/10

# Şifreleme anahtarı yolu (Docker volume içinde)
private_key_path: /var/lib/headscale/private.key

# Gürültü (Noise) protokolü anahtarı (v0.23+ için gerekli olabilir)
noise:
  private_key_path: /var/lib/headscale/noise_private.key

# Veritabanı Ayarları (SQLite)
database:
  type: sqlite3
  sqlite:
    path: /var/lib/headscale/db.sqlite

# DERP Ayarları (Varsayılan STUN/DERP sunucularını kullanmak için)
derp:
  server:
    enabled: false # Kendi DERP sunucunuzu kurmayacaksanız false kalsın
    region_id: 999
    region_code: "headscale"
    region_name: "Headscale Embedded DERP"
    stun_listen_addr: "0.0.0.0:3478"
  urls:
    - https://controlplane.tailscale.com/derpmap/default

# Log ayarları
log:
  level: info
  format: text

# DNS Ayarları (MagicDNS kullanmak isterseniz)
dns:
  magic_dns: true
  base_domain: example.com
  nameservers:
    global:
      - 1.1.1.1
      - 8.8.8.8
